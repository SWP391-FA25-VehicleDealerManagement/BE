package com.example.evm.service.debt;

import com.example.evm.entity.Debt;
import com.example.evm.repository.DebtRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;
import java.util.Optional;

@Service
public class DebtService {

    @Autowired
    private DebtRepository debtRepository;

    public List<Debt> getAllDebts() {
        return debtRepository.findAll();
    }

    public Optional<Debt> getDebtById(Integer id) {
        return debtRepository.findById(id);
    }

    public Debt createDebt(Debt debt) {
        return debtRepository.save(debt);
    }

    public Debt updateDebt(Integer id, Debt detail) {
        return debtRepository.findById(id)
                .map(d -> {
                    d.setUserid(detail.getUserid());
                    d.setDealerid(detail.getDealerid());
                    d.setCustomerid(detail.getCustomerid());
                    d.setAmountdue(detail.getAmountdue());
                    d.setAmountpaid(detail.getAmountpaid());
                    d.setStatus(detail.getStatus());
                    return debtRepository.save(d);
                })
                .orElseThrow(() -> new RuntimeException("Debt not found with id " + id));
    }

    public void deleteDebt(Integer id) {
        debtRepository.deleteById(id);
    }
}
